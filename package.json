{
  "name": "mo-slide",
  "version": "1.0.0",
  "description": "A modern, plugin-based, themeable slide presentation framework",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "mo-slide": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:examples": "npm run build && node scripts/create-prod-examples.js",
    "preview": "vite preview",
    "preview:prod": "npm run build && vite preview --outDir example --port 3000",
    "test": "vitest",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write src/**/*.{ts,tsx,css}",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "slides",
    "presentation",
    "markdown",
    "typescript",
    "reveal",
    "framework"
  ],
  "author": "mo.js.org",
  "license": "MIT",
  "homepage": "https://mo.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/mojs/mo-slide.git"
  },
  "bugs": {
    "url": "https://github.com/mojs/mo-slide/issues"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0"
  }
}
