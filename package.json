{
  "name": "mostage",
  "version": "1.3.1",
  "description": "Presentation framework based on markdown with HTML support.",
  "keywords": [
    "slides",
    "presentation",
    "markdown",
    "web-based",
    "typescript",
    "framework"
  ],
  "author": "mo.js.org",
  "license": "MIT",
  "homepage": "https://mo.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/mirmousaviii/mostage.git"
  },
  "bugs": {
    "url": "https://github.com/mirmousaviii/mostage/issues"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "bin": {
    "mostage": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --config vite.dev.config.ts",
    "build": "npm run build:lib && npm run build:cli && npm run build:example",
    "build:lib": "vite build --config vite.build.lib.config.ts",
    "build:cli": "vite build --config vite.build.cli.config.ts",
    "build:example": "vite build --config vite.build.example.config.ts",
    "preview": "vite preview --config vite.build.example.config.ts",
    "test": "vitest",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write src/**/*.{ts,tsx,css}",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.3.0",
    "@types/prismjs": "^1.26.5",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.0.0",
    "marked": "^16.3.0",
    "prismjs": "^1.30.0"
  }
}
